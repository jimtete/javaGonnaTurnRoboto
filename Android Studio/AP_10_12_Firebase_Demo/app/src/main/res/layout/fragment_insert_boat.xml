<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertBoatFragment"
    android:padding="8dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERT BOAT"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:id="@+id/editText_insert_boat_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="enter boat id..." />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:id="@+id/editText_insert_boat_bname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter boat name..." />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:id="@+id/editText_insert_boat_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="enter color..." />

    <Button
        android:layout_marginTop="48dp"
        android:id="@+id/button_submit_boat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_gravity="center"/>
</LinearLayout>